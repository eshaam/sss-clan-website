<div class="container push-top">
  <div class="row">
    <div class="col-sm-6 col-sm-offset-3">
      <div class="light-well">
        <h2 class="page-header text-center">Post new Gameplay</h2>

        <%= simple_form_for(@gameplay) do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs">
        <%= f.input :title, required: true  %>
        <%= f.input :link, required: true  %>
        <%= f.association :game , include_blank: false%>
        <%= f.input :description %>

        </div>
        <div class="form-actions">
          <%= f.button :submit, "Post", class: 'btn btn-primary btn-block' %>
        </div>
        <% end %>




      </div>
      <br>
      <br>
    </div>
  </div>
</div>
